<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wizytówki.Views.PersonDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Imię:" FontSize="Medium" />
        <Label Text="{Binding Person.FirstName}" FontSize="Small"/>
        <Label Text="Nazwisko:" FontSize="Medium" />
        <Label Text="{Binding Person.LastName}" FontSize="Small"/>
        <Label Text="Numer telefonu:" FontSize="Medium" />
        <Label Text="{Binding Person.PhoneNumber}" FontSize="Small"/>
        <Label Text="Adres email:" FontSize="Medium" />
        <Label Text="{Binding Person.EmailAddress}" FontSize="Small"/>
    </StackLayout>
</ContentPage>